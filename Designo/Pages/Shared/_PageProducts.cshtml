
<div class="w-[90%] xl:w-[100%] mx-auto mt-[10vh] flex flex-wrap flex-col md:flex-row items-center justify-between	 gap-10 ">



	@foreach (var webDesign in Model)
	{
		<div class="overflow-hidden w-[330px] sm:w-full md:w-[350px] group rounded-[5px] bg-peach-secondary/20 hover:bg-peach-primary cursor-pointer
			flex flex-col sm:flex-row md:flex-col flex-wrap items-center  gap-4">
			<img src=@webDesign.Image class="h-[350px]  w-[330px] md:w-[350px] " />
			<div class="text-center w-[90%] sm:w-[40%] md:w-[80%] mx-auto  ">
				<h3 class="text-heading-h3 text-peach-primary group-hover:text-white-primary">@webDesign.Name</h3>
				<p class="text-body-p text-black-primary mt-[15px] mb-[25px] group-hover:text-white-primary">@webDesign.Description</p>
			</div>
		</div>
	}


</div>